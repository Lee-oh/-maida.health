<div class="card card-primary">
  <div class="card-header">
  <h3 class="card-title">Diet</h3>
  </div>
  <div class="card-body">
  <form action="/point/<%=@point.id%>" method="post">
  <input type="hidden" name="_method" value="put">
  <div class="form-group">
  <label>Title</label>
  <input type="text" value="<%=@point.title%>" class="form-control" placeholder="<%=@point.title%>" name="title">
  </div>
  <div class="form-group">
  <label>Date:</label>
  <div class="input-group">
  <div class="input-group-prepend">
  <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
  </div>
  <input type="text" value="<%=@point.schedule%>" class="form-control" placeholder="<%=@point.schedule%>" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask name="schedule">
  </div>
  </div> 

  <div class="form-group">
  <label>Weight</label>
  <input type="number" value="<%=@point.weight%>" class="form-control" placeholder="<%=@point.weight%>" name="weight">
  </div>

  <div class="form-group">
  <div class="col-lg-2">
  <button type="submit" class="btn btn-block btn-primary">Update</button>
  </div>
  </div>
  </form>
</div>
</div>
</div>