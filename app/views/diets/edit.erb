<div class="card card-primary">
  <div class="card-header">
  <h3 class="card-title">Diet</h3>
  </div>
  <div class="card-body">
  <form action="/diet/<%=@diet.id%>" method="post">
  <input type="hidden" name="_method" value="put">
  <div class="form-group">
  <label>Title</label>
  <input type="text" class="form-control" placeholder="<%=@diet.title%> ..." name="title" value="<%=@diet.title%>">
  </div>
  <div class="form-group">
  <label>Description</label>
  <textarea class="form-control" rows="3" placeholder="<%=@diet.description%>" name="description" value="<%=@diet.description%>"></textarea>
  </div>
  <div class="form-group">
  <label>Schedule</label>
  <input type="text" class="form-control" placeholder="<%=@diet.schedule%>" name="schedule" value="<%=@diet.schedule%>">
  </div>


<div class="form-group">
<label>Date Start:</label>
<div class="input-group">
<div class="input-group-prepend">
<span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
</div>
<input type="text" placeholder="<%=@diet.start%>" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask name="start">
</div>
</div>


<div class="form-group">
<label>Date Finish:</label>
<div class="input-group">
<div class="input-group-prepend">
<span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
</div>
<input type="text" placeholder="<%=@diet.start%>" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask name="finish">
</div>
</div>





  <div class="form-group">
  <div class="input-group">
  <label>Period</label>
  <select class="form-control select2" style="width: 100%;" name="period">
  <option selected="selected"><%=@diet.period%></option>
  <option>Snack</option>
  <option>Lunch</option>
  <option>Dinner</option>
  </select>
  </div>
  </div>


  <div class="form-group">
  <label>Height</label>
  <input type="number" class="form-control" placeholder="<%=@diet.height%> ..." name="height" value="<%=@diet.height%>">
  </div>
  <div class="form-group">
  <label>Weight</label>
  <input type="number" class="form-control" placeholder="<%=@diet.weight%> ..." name="weight" value="<%=@diet.weight%>">
  </div>
  <div class="form-group">
  <label>Target Weight</label>
  <input type="number" class="form-control" placeholder="<%=@diet.target_weight%> ..." name="target_weight" value="<%=@diet.target_weight%>">
  </div>



  <div class="form-group">
  <div class="col-lg-2">
  <button type="submit" class="btn btn-block btn-primary">Upate</button>
  </div>
  </div>
  </form>
</div>
</div>